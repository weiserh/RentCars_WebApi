
@{
    ViewBag.Title = "Contactus";
}

<div class="container">
    <form id="contactForm" method="post" action="mailto:hilaweiser1@gmail.com" role="form">
        <h3>Contact Us</h3>
        <label for="firstName" class="col-sm-3 control-label">First name:</label>
        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First Name" /><br />
        <label for="lastName" class="col-sm-3 control-label">Last name:</label>
        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last Name" /><br />
        <label for="phone" class="col-sm-3 control-label">Phone number:</label>
        <input type="number" class="form-control" name="cellPhone" id="cellPhone" placeholder="Phone Number" /><br />
        <label for="email" class="col-sm-3 control-label">Email:</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="Insert email" /><br />
        <label for="inquiry" class="col-sm-3 control-label">Subject:</label>
        <textarea name="inquiry" id="inquiry"></textarea><br />
        <button type="submit" class="btn btn-primary" name="submit" id="contactBtn">Submit</button>
    </form>
</div>

